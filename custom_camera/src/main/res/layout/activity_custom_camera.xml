<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <com.zzmeng.customcamera.ui.widget.camera.CameraView
            android:id="@+id/main_cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            app:flash="off"
            android:background="@android:color/black"/>

    <ImageView
            android:id="@+id/main_iv_finish"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_camera_back_n"/>

    <ImageView
            android:id="@+id/main_iv_flash"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_camera_flash_off"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#b3000000"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

        <ImageView
                android:id="@+id/main_iv_take"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_btn_camera_photo"/>

        <ImageView
                android:id="@+id/main_iv_camera"
                android:layout_width="42dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_camera_overturn_n"/>

    </RelativeLayout>

</RelativeLayout>