<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000000"
              android:orientation="vertical">

    <com.zzmeng.customcamera.ui.widget.cut.CustomCutImageView
            android:id="@+id/main_iv_cut"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>

    <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <Button
                android:id="@+id/main_btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@drawable/selector_btn_color_white_gray"
                android:textSize="18sp"
                android:text="@string/custom_camera_cancel"
                android:background="@drawable/layer_btn_cut_left"/>

        <Button
                android:id="@+id/main_btn_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@drawable/selector_btn_color_white_gray"
                android:textSize="18sp"
                android:text="@string/custom_camera_sure"
                android:background="@drawable/layer_btn_cut_right"/>


    </LinearLayout>

</LinearLayout>